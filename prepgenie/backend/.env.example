# Database Configuration - Replace with your Supabase PostgreSQL URL
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/prepgenie

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# OpenAI Configuration
# Environment Configuration
ENVIRONMENT=local

# Database Configuration (for production - Supabase)
# Replace with your actual Supabase credentials - DO NOT commit real values
user=your-supabase-user
password=your-supabase-password
host=your-supabase-host
port=5432
dbname=prepgenie

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# LLM Provider Selection
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Walmart LLM Gateway Configuration - REMOVE IF NOT USING
WALMART_LLM_GATEWAY_API_KEY=your-walmart-gateway-key
WALMART_LLM_GATEWAY_BASE_URL=https://wmtllmgateway.stage.walmart.com/wmtllmgateway
WALMART_LLM_GATEWAY_MODEL=gpt-4o-mini
WALMART_LLM_GATEWAY_SVC_ENV=stage

# Walmart Consumer Auth - REMOVE IF NOT USING
WALMART_CONSUMER_ID=your-consumer-id
WALMART_PRIVATE_KEY=your-private-key

# Milvus/Zilliz Vector Database
MILVUS_URI=your-milvus-uri
MILVUS_TOKEN=your-milvus-token
MILVUS_LOCAL_PATH=./milvus_lite_local.db

# Vector Service Control
DISABLE_VECTOR_SERVICE=false

# Milvus Configuration
MILVUS_URI=https://your-milvus-instance.zillizcloud.com
MILVUS_TOKEN=your-milvus-token-here

# CORS Origins
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","https://prepgenie-frontend.vercel.app"]

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Environment
ENVIRONMENT=development
